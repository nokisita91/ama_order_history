<% require_relative './term_names' %>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link rel="stylesheet" type="text/css" href="default.css">
    <title>Amazon履歴</title>
  </head>
  <body>
    <h1>注文履歴</h1>
    <h2 class="alert">注文履歴が取得できませんでした。</h2>
    <p id="links"><a href="index.html">メニューに戻る</a></p>
    <p id="msg">入力情報を見直してください。</p>
    <hr>
    <table>
      <tr>
        <th>取得期間</th>
        <td><%= $term_names[params[:term]] %> (<%= params[:term] %>) </td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= params[:account_mail] %></td>
      </tr>
      <tr>
        <th>パスワード</th>
        <td><%= params[:account_password] %></td>
      </tr>
    </table>
    <hr>
  </body>
</html>